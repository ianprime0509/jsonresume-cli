{
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.spec.ts"],
  "compilerOptions": {
    "types": ["@types/node"],
    "target": "es2015",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}
